<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>Editing Book</h2>
        <!-- form_with部分 -->
        <%= form_with model:@book, url: book_path(@book), local: true do |book| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= book.text_field :title, class: "book_title form-control" %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= book.text_area :body, class: "book_opinion form-control" %>
        </div>
        <div class="form-group">
          <%= book.submit 'Update Book', class: "btn btn-secondary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
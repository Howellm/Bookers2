<h1>Users#show</h1>

<table class = "table">
  <h2>Books</h2>
  <tr>
    <th>Title</th>
    <th>Option</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.body %>
      </td>
    </tr>
  <% end %>
</table>
<%= form_with model:@book, url: books_path, local:true do |f| %>
  <h3>title</h3>
  <%= f.text_field :title %>
  <h3>body</h3>
  <%= f.text_area :body %>
  <%= f.submit "submit" %>
<% end %>

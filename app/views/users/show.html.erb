      </ul>
    </div>
  </nav>
</header>

<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= form_with model:@book, url: books_path, local:true do |f| %>
      <div class="form_group">
        <label for="book_title">Title</label>
          <%= f.text_field :title, id: "book_title" %>
      </div>
      <div class="form_group">
        <label for="book_option">Option</label>
          <%= f.text_area :body, id: "book_option" %>
      </div>
      <div class="form_group">
        <%= f.submit "Create Book", class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
    <div class="col-lg-8">
      <table class = "table">
        <h2>Books</h2>
        <tr>
          <th>Title</th>
          <th>Option</th>
        </tr>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= book.title %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>


<h1>Users#show</h1>

  <div class="container">
    <div class="row">
      <div class="col-lg-3">
        <%= form_with model:@book, url: books_path, local:true do |f| %>
          <label for="book_title">Title</label>
          <div class="book_title">
            <%= f.text_field :title %>
          </div>
          <label for="book_option">Option</label>
          <div class="book_option">
            <%= f.text_area :body %>
          </div>
          <%= f.submit "Create Book", class: "btn btn-success" %>
        <% end %>
      </div>
      <div class="col-lg-8">
        <table class = "table">
          <h2>Books</h2>
          <tr>
            <th>Title</th>
            <th>Option</th>
          </tr>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= book.title %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>


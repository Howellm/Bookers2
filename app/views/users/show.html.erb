
<header>
  <%= render 'layouts/shared/header', user: @user %>
</header>
<main>
<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th>da</th>
            </tr>
            <tr>
              <th>introduction</th>
              <th></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block py-0" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model:@book, url: books_path, local:true do |f| %>
        <div class="form_group">
          <label for="book_title">Title</label>
            <%= f.text_field :title, id: "book_title", class: "form-control book_title" %>
        </div>
        <div class="form_group">
          <label for="book_option">Option</label>
            <%= f.text_area :body, id: "book_option", class: "form-control" %>
        </div>
        <div class="form_group">
          <%= f.submit "Create Book", class: "btn btn-success" %>
        </div>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <table class = "table table-inverse">
          <h2>Books</h2>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Option</th>
            <th></th>
          </tr>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= book.title %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</main>


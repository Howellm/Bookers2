
<header>
  <%= render 'layouts/shared/header', user: @user %>
</header>
<main>
<p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render 'layouts/shared/profile', user: @user, book: @book %>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class = "table table-inverse table-hover">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Option</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= book.title %>
                </td>
                <td>
                  <%= book.user_id %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>

